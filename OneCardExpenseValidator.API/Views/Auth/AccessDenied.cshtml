@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OneCard Expense Validator</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="col-md-6 text-center">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <i class="bi bi-shield-lock-fill text-danger" style="font-size: 5rem;"></i>
                        <h1 class="mt-4 mb-3">Acceso Denegado</h1>
                        <p class="text-muted mb-4">
                            No tienes los permisos necesarios para acceder a esta página.
                        </p>
                        <div class="d-grid gap-2">
                            <a href="/" class="btn btn-primary">
                                <i class="bi bi-house-door-fill"></i> Volver al Inicio
                            </a>
                            <a href="/Auth/Logout" class="btn btn-outline-secondary">
                                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
