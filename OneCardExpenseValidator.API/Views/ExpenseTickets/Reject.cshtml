@model OneCardExpenseValidator.Infrastructure.Entities.ExpenseTicket

@{
    ViewData["Title"] = "Rechazar Ticket";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-danger"><i class="bi bi-x-circle"></i> Rechazar Ticket</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Confirmar Rechazo</h4>
    <p>Está a punto de rechazar este ticket de gasto. Debe proporcionar una razón para el rechazo.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Información del Ticket</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Número de Ticket:</dt>
                    <dd class="col-sm-8">@Model.TicketNumber</dd>

                    <dt class="col-sm-4">Empleado:</dt>
                    <dd class="col-sm-8">@Model.Employee?.FirstName @Model.Employee?.LastName</dd>

                    <dt class="col-sm-4">Fecha del Ticket:</dt>
                    <dd class="col-sm-8">@Model.TicketDate.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Vendedor:</dt>
                    <dd class="col-sm-8">@Model.Vendor</dd>

                    <dt class="col-sm-4">Monto Total:</dt>
                    <dd class="col-sm-8"><strong>@Model.TotalAmount.ToString("C")</strong></dd>
                </dl>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Rechazar Ticket</h5>
            </div>
            <div class="card-body">
                <form asp-action="RejectConfirmed" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.TicketId" />

                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Razón del Rechazo: <span class="text-danger">*</span></label>
                        <textarea name="rejectionReason" id="rejectionReason" class="form-control" rows="5"
                                  placeholder="Por favor describa la razón del rechazo..." required></textarea>
                        <div class="form-text">Explique claramente por qué este ticket está siendo rechazado.</div>
                    </div>

                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle"></i> Al confirmar, este ticket será marcado como <strong>RECHAZADO</strong> y se notificará al empleado.
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-x-circle"></i> Confirmar Rechazo
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            var reason = document.getElementById('rejectionReason').value.trim();
            if (reason.length < 10) {
                e.preventDefault();
                alert('La razón del rechazo debe tener al menos 10 caracteres.');
                return false;
            }
        });
    </script>
}
