@model OneCardExpenseValidator.Infrastructure.Entities.Employee

@{
    ViewData["Title"] = "Crear Empleado";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-person-plus-fill"></i> Crear Empleado</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la Lista
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="EmployeeCode" class="form-label">Código de Empleado</label>
                            <input asp-for="EmployeeCode" class="form-control" placeholder="Ej: EMP001" />
                            <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="empleado@empresa.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label">Nombre</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Nombre" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label">Apellido</label>
                            <input asp-for="LastName" class="form-control" placeholder="Apellido" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DepartmentId" class="form-label">Departamento</label>
                            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId">
                                <option value="">-- Seleccione un Departamento --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Position" class="form-label">Puesto</label>
                            <input asp-for="Position" class="form-control" placeholder="Ej: Gerente, Analista" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DailyExpenseLimit" class="form-label">Límite de Gasto Diario</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="DailyExpenseLimit" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="DailyExpenseLimit" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MonthlyExpenseLimit" class="form-label">Límite de Gasto Mensual</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MonthlyExpenseLimit" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="MonthlyExpenseLimit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
