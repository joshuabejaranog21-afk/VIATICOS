@model IEnumerable<OneCardExpenseValidator.Infrastructure.Entities.Category>

@{
    ViewData["Title"] = "Categorías de Gastos";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="bi bi-tags-fill"></i> Categorías de Gastos</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Categoría
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Deducible</th>
                        <th>Requiere Aprobación</th>
                        <th>Monto Máximo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CategoryCode)</td>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                @if (item.IsDeductible == true)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Sí
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                @if (item.RequiresApproval == true)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-shield-check"></i> Sí
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>@(item.MaxAmountAllowed?.ToString("C") ?? "Sin límite")</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info" title="Ver Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
